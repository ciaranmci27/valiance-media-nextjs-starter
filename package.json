{
  "name": "nextjs-marketing-boilerplate",
  "version": "1.0.0",
  "description": "A production-ready Next.js marketing website boilerplate with CMS, blog, and SEO features",
  "author": "Your Name",
  "license": "MIT",
  "private": false,
  "keywords": [
    "nextjs",
    "marketing",
    "boilerplate",
    "cms",
    "blog",
    "seo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nextjs-marketing-boilerplate"
  },
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/ensure-page-seo.js && node scripts/generate-sitemap-pages.js && node scripts/generate-routes.js && node scripts/generate-pages-config.js && next build",
    "ensure-seo": "node scripts/ensure-page-seo.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "generate-routes": "node scripts/generate-routes.js",
    "generate-pages": "node scripts/generate-pages-config.js",
    "generate-sitemap": "node scripts/generate-sitemap-pages.js",
    "setup-auth": "npx tsx scripts/setup-auth.ts"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@octokit/rest": "^22.0.0",
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.0.0",
    "eslint-config-next": "15.4.5",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
