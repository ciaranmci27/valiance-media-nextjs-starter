# ===========================================
# REQUIRED ENVIRONMENT VARIABLES
# ===========================================

# Your website URL (no trailing slash)
# For local development: http://localhost:3000
# For production: https://yourdomain.com
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# ===========================================
# OPTIONAL - ANALYTICS
# ===========================================

# Google Analytics 4 (GA4)
# Get your Measurement ID from: https://analytics.google.com
# 1. Go to Admin > Data Streams > Web Stream
# 2. Copy the Measurement ID (format: G-XXXXXXXXXX)
# Learn more: https://support.google.com/analytics/answer/9539598
NEXT_PUBLIC_GA_ID=

# Facebook Pixel
# Get your Pixel ID from: https://business.facebook.com/events_manager
# 1. Go to Events Manager > Data Sources
# 2. Select your Pixel or create a new one
# 3. Copy the Pixel ID (format: 15-16 digit number)
# Learn more: https://www.facebook.com/business/help/952192354843755
NEXT_PUBLIC_FB_PIXEL_ID=

# Hotjar
# Get your Site ID from: https://insights.hotjar.com
# 1. Go to Sites & Organizations
# 2. Select your site
# 3. Find the Site ID in the tracking code (format: 7-digit number)
# Learn more: https://help.hotjar.com/hc/en-us/articles/115011639927
NEXT_PUBLIC_HOTJAR_ID=

# Microsoft Clarity
# Get your Project ID from: https://clarity.microsoft.com
# 1. Go to Settings > Setup
# 2. Find the Project ID in the tracking code (format: 10-character string)
# Learn more: https://docs.microsoft.com/en-us/clarity/clarity-setup
NEXT_PUBLIC_CLARITY_ID=

# ===========================================
# OPTIONAL - SEARCH ENGINE VERIFICATION
# ===========================================

# Google Search Console
# Get verification code from: https://search.google.com/search-console
# 1. Add property > URL prefix > Alternative methods > HTML tag
# 2. Copy content value from meta tag (just the code, not the whole tag)
# Learn more: https://support.google.com/webmasters/answer/9008080
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Bing Webmaster Tools
# Get verification code from: https://www.bing.com/webmasters
# 1. Add your site > Get Verified > HTML Meta Tag
# 2. Copy content value from meta tag (just the code, not the whole tag)
# Learn more: https://www.bing.com/webmasters/help/add-and-verify-site-12184f8b
NEXT_PUBLIC_BING_SITE_VERIFICATION=

# Yandex Webmaster
# Get verification code from: https://webmaster.yandex.com
# 1. Add site > Verification methods > Meta tag
# 2. Copy content value from meta tag (just the code, not the whole tag)
# Learn more: https://yandex.com/support/webmaster/service/rights.html
NEXT_PUBLIC_YANDEX_SITE_VERIFICATION=

# Pinterest Business
# Get verification code from: https://business.pinterest.com
# 1. Settings > Claim > Website > Add HTML tag
# 2. Copy content value from meta tag (just the code, not the whole tag)
# Learn more: https://help.pinterest.com/en/business/article/claim-your-website
NEXT_PUBLIC_PINTEREST_SITE_VERIFICATION=

# ===========================================
# ADMIN AUTHENTICATION
# ===========================================

# Simple Authentication Settings
# Generate these using: npx tsx scripts/setup-auth.ts
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=
ADMIN_TOKEN=
# Authentication Provider (simple | custom | jwt | oauth)
# Default: simple (username/password authentication)
ADMIN_AUTH_PROVIDER=simple

# Development Only - Disable Admin Authentication
# WARNING: Never use this in production!
DISABLE_ADMIN_AUTH=false

# ===========================================
# CMS GITHUB INTEGRATION (OPTIONAL)
# ===========================================

# GitHub CMS Integration - Only needed for production deployments
# The CMS automatically detects environment:
# - Development/localhost: Saves locally (no git commits)
# - Production: Commits changes to GitHub automatically
#
# To enable GitHub integration in production:
# 1. Create a GitHub Personal Access Token with 'repo' scope
#    https://github.com/settings/tokens/new
# 2. Add the token and repository details below

# GitHub Personal Access Token (with 'repo' scope)
GITHUB_TOKEN=

# GitHub repository owner (username or organization)
GITHUB_OWNER=

# GitHub repository name
GITHUB_REPO=

# Branch to commit to (default: main)
GITHUB_BRANCH=main

# Deployment Webhook (Optional)
# Trigger automatic deployment after GitHub commits
# For Vercel: https://vercel.com/docs/concepts/git/deploy-hooks
# For Netlify: https://docs.netlify.com/configure-builds/build-hooks/
DEPLOY_WEBHOOK_URL=

# Third-Party Authentication (Optional)
# Uncomment and configure based on your chosen provider

# NextAuth.js
# NEXTAUTH_SECRET=
# NEXTAUTH_URL=http://localhost:3000

# Google OAuth
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Auth0
# AUTH0_SECRET=
# AUTH0_BASE_URL=http://localhost:3000
# AUTH0_ISSUER_BASE_URL=
# AUTH0_CLIENT_ID=
# AUTH0_CLIENT_SECRET=

# Clerk
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
# CLERK_SECRET_KEY=

# Supabase
# NEXT_PUBLIC_SUPABASE_URL=
# NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================

# Node environment (development | production | test)
# Automatically set by Next.js, usually doesn't need manual configuration
NODE_ENV=development